<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Acapulco" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="activityBackground">@color/activity_background_light</item>
        <item name="android:windowBackground">@color/activity_background_light</item>
        <item name="primaryColor">@android:color/primary_text_light</item>
        <item name="secondaryColor">@android:color/tertiary_text_light</item>
        <item name="dividerColor">@color/divider_light</item>
        <item name="sectionColor">@color/modern_section_color</item>
        <item name="blockBackground">@drawable/block_light</item>
        <item name="activatedBackgroundIndicator">@drawable/list_activated_background</item>
        <!--  -->
        <item name="actionBarItemBackground">@drawable/selectable_background_acapulco</item>
        <item name="popupMenuStyle">@style/PopupMenu.Acapulco</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Acapulco</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Acapulco</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Acapulco</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Acapulco</item>
        <item name="actionModeBackground">@color/acapulco</item>
        <item name="actionModeSplitBackground">@color/acapulco</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Acapulco</item>
        <item name="actionOverflowButtonStyle">@style/OverflowMenuButton</item>
        <item name="homeAsUpIndicator">@drawable/ic_ab_up_compat</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Acapulco.Widget</item>
    </style>

    <style name="Theme.Acapulco.Tabs">
        <item name="windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/ActionBar.Plain</item>
    </style>

    <style name="Theme.Acapulco.Main">
        <item name="windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/ActionBar.Plain</item>
        <item name="homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>

    <style name="Theme.Acapulco.Card">
        <item name="activityBackground">@color/activity_background_card</item>
        <item name="android:windowBackground">@color/activity_background_card</item>
    </style>

    <style name="Theme.Acapulco.Dark" parent="@style/Theme.Sherlock">
        <item name="activityBackground">@android:color/background_dark</item>
        <item name="primaryColor">@android:color/primary_text_dark</item>
        <item name="secondaryColor">@android:color/secondary_text_dark</item>
        <item name="dividerColor">@color/divider_dark</item>
        <item name="sectionColor">@color/acapulco</item>
        <item name="blockBackground">@drawable/block_dark</item>
        <item name="sectionBackground">@drawable/list_section_underline_dark</item>
    </style>

    <style name="ActionBar.Plain" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/acapulco</item>
        <item name="backgroundStacked">@color/acapulco</item>
        <item name="backgroundSplit">@color/acapulco</item>
        <item name="icon">@drawable/actionbar_icon_placeholder</item>
        <item name="indeterminateProgressStyle">@style/ActionBarIndeterminateProgressStyle.Acapulco</item>
    </style>

    <style name="ActionBar.Solid.Acapulco" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_acapulco</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_acapulco</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_acapulco</item>
        <item name="progressBarStyle">@style/ProgressBar.Acapulco</item>
        <item name="icon">@drawable/actionbar_icon_placeholder</item>
        <item name="indeterminateProgressStyle">@style/ActionBarIndeterminateProgressStyle.Acapulco</item>
    </style>

    <style name="ActionBarIndeterminateProgressStyle.Acapulco" parent="@style/Widget.Sherlock.ProgressBar">
        <item name="android:minHeight">@dimen/indeterminate_progress_size</item>
        <item name="android:layout_height">@dimen/indeterminate_progress_size</item>
        <item name="android:maxHeight">@dimen/indeterminate_progress_size</item>
        <item name="android:minWidth">@dimen/indeterminate_progress_size</item>
        <item name="android:layout_width">@dimen/indeterminate_progress_size</item>
        <item name="android:layout_marginRight">4dip</item>
        <item name="android:maxWidth">@dimen/indeterminate_progress_size</item>
    </style>

    <style name="Theme.WidgetDialog" parent="@android:style/Theme.Dialog" />

    <style name="ItineraryDialog" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="OverflowMenuButton" parent="@style/Widget.Sherlock.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more</item>
    </style>

</resources>