<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultLine.Content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="16dip"
    android:paddingTop="16dip" >

    <ImageView
        android:id="@id/itemIcon"
        style="@style/ItemSymbole"
        android:layout_gravity="top"
        android:layout_marginRight="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@id/itemSymbole"
        style="@style/ItemSymbole"
        android:layout_gravity="top"
        android:layout_marginRight="16dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@id/itemTitle"
            style="@style/ItemPrimaryText.SingleLine.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@id/itemTime"
            style="@style/ItemSecondaryText.SingleLine.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@id/itemDescription"
            style="@style/ItemPrimaryText.Medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:autoLink="all"
            android:gravity="left|center_vertical"
            android:linksClickable="true" />
    </LinearLayout>

</LinearLayout>