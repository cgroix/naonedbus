<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/blockBackground"
    android:orientation="vertical"
    android:padding="@dimen/padding_small" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@id/formIconFrom"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_directions_form_destination_notselected" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_directions_form_dots" />

            <ImageView
                android:id="@id/formIconTo"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_directions_form_destination_notselected" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_weight="10"
            android:divider="@android:drawable/divider_horizontal_bright"
            android:orientation="vertical"
            android:showDividers="middle" >

            <TextView
                android:id="@id/fromPlace"
                style="@style/ItemPrimaryText"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                android:singleLine="true" />

            <TextView
                android:id="@id/toPlace"
                style="@style/ItemPrimaryText"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_clock" />

        <TextView
            android:id="@id/itemDate"
            style="@style/ItemPrimaryText"
            android:layout_marginLeft="@dimen/padding_medium" />
    </LinearLayout>

</LinearLayout>