<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        style="@style/CardAboutTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_com_title" />

    <RelativeLayout
        style="@style/CardAbout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@id/aboutTwitter"
                style="@style/SectionContentItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_small"
                android:contentDescription="@string/about_com_twitter"
                android:src="@drawable/twitter_account" />

            <ImageView
                style="@style/SectionContentItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_small"
                android:contentDescription="@string/about_com_facebook"
                android:src="@drawable/googleplus_account" />

            <ImageView
                android:id="@id/aboutFacebook"
                style="@style/SectionContentItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_small"
                android:contentDescription="@string/about_com_facebook"
                android:src="@drawable/facebook_account" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            style="@style/Divider.Card"
            android:layout_below="@id/top" />

        <TextView
            android:id="@id/aboutMail"
            style="@style/SectionContentItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/top"
            android:layout_alignRight="@id/top"
            android:layout_below="@id/divider"
            android:layout_margin="@dimen/padding_small"
            android:drawableLeft="@drawable/gmail"
            android:text="@string/about_com_mail" />
    </RelativeLayout>

</merge>