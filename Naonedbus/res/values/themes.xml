<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Acapulco.Light" parent="Theme.Acapulco">
        <item name="activityBackground">@color/activity_background_light</item>
        <item name="android:windowBackground">@color/activity_background_light</item>
        <item name="primaryColor">@android:color/primary_text_light</item>
        <item name="secondaryColor">@android:color/tertiary_text_light</item>
        <item name="dividerColor">@color/divider_light</item>
        <item name="sectionColor">@color/holo_blue_light</item>
        <item name="blockBackground">@drawable/block_light</item>
        <item name="sectionBackground">@drawable/list_section_underline_light</item>
        <!--  -->
        <item name="actionBarItemBackground">@drawable/selectable_background_acapulco</item>
        <item name="popupMenuStyle">@style/PopupMenu.Acapulco</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Acapulco</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Acapulco</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Acapulco</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Acapulco</item>
        <item name="actionModeBackground">@drawable/cab_background_top_acapulco</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_acapulco</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Acapulco</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Acapulco.Widget</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.Acapulco.Widget</item>
    </style>

    <style name="Theme.Acapulco.Light.HomeAsMenu">
        <item name="activityBackground">@color/activity_background_light</item>
        <item name="primaryColor">@android:color/primary_text_light</item>
        <item name="secondaryColor">@android:color/tertiary_text_light</item>
        <item name="dividerColor">@color/divider_light</item>
        <item name="sectionColor">@color/holo_blue_light</item>
        <item name="blockBackground">@drawable/block_light</item>
        <item name="sectionBackground">@drawable/list_section_underline_light</item>
        <item name="homeAsUpIndicator">@drawable/ic_ab_home_as_menu</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_home_as_menu</item>
    </style>

    <style name="Theme.Acapulco.Dark" parent="@style/Theme.Sherlock">
        <item name="activityBackground">@android:color/background_dark</item>
        <item name="primaryColor">@android:color/primary_text_dark</item>
        <item name="secondaryColor">@android:color/secondary_text_dark</item>
        <item name="dividerColor">@color/divider_dark</item>
        <item name="sectionColor">@color/holo_blue_dark</item>
        <item name="blockBackground">@drawable/block_dark</item>
        <item name="sectionBackground">@drawable/list_section_underline_dark</item>
    </style>

    <style name="Theme.Acapulco.Dark.HomeAsMenu">
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_home_as_menu</item>
    </style>

    <style name="Theme.WidgetDialog" parent="@android:style/Theme.Dialog" />


</resources>