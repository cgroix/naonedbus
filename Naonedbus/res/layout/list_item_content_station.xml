<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultLine.Content" >

    <ImageView
        android:id="@id/itemSymbole"
        style="@style/ItemSymbole"
        android:background="@drawable/item_symbole_back"
        android:padding="5dp"
        android:src="@drawable/map_layer_arret" />

    <TwoLineListItem
        style="@style/TwoListItem"
        android:paddingLeft="10dip" >

        <TextView
            android:id="@id/itemTitle"
            style="@style/ItemPrimaryText"
            android:layout_above="@id/itemLignes"
            android:layout_marginBottom="2dip" />

        <LinearLayout
            android:id="@id/itemLignes"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_below="@id/itemTitle"
            android:clipChildren="true"
            android:gravity="left|center_vertical" />
    </TwoLineListItem>

</LinearLayout>