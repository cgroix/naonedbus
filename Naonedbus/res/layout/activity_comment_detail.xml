<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultActivity" >

    <include layout="@layout/header_activity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        android:background="?attr/blockBackground"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium" >

        <TextView
            android:id="@+id/itemDate"
            style="@style/BigSubTitle.Time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@android:string/untitled" />

        <TextView
            android:id="@+id/itemDescription"
            style="@style/CommentDetail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="@android:string/untitled" />

        <TextView
            android:id="@+id/itemSource"
            style="@style/ItemSecondaryText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@android:string/untitled" />
    </LinearLayout>

</LinearLayout>