<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultLine"
    android:layout_margin="0dip"
    android:paddingBottom="0dip"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingTop="0dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/fromTime"
            style="@style/ItemTime.Medium"
            android:layout_alignParentRight="false"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_small"
            android:text="0:00" />

        <View
            android:id="@+id/itemMetroPointFrom"
            android:layout_width="40dip"
            android:layout_height="60dip"
            android:layout_toRightOf="@id/fromTime"
            android:background="@drawable/ic_arret_step" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/fromTime"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/itemSymbole"
                style="@style/ItemSymbole"
                android:background="@drawable/item_symbole_back" />

            <ImageView
                android:id="@id/itemIcon"
                style="@style/ItemSymbole"
                android:background="@drawable/item_symbole_back"
                android:scaleType="center"
                android:src="@drawable/itinerary_leg_walk" />

            <TextView
                android:id="@id/fromPlace"
                style="@style/ItemPrimaryText.SingleLine"
                android:layout_toRightOf="@id/itemSymbole"
                android:paddingLeft="@dimen/padding_small"
                android:text="Trémissinière" />

            <TextView
                android:id="@id/fromDirection"
                style="@style/ItemSecondaryText.SingleLine"
                android:layout_below="@id/fromPlace"
                android:layout_toRightOf="@id/itemSymbole"
                android:paddingLeft="@dimen/padding_small"
                android:text="-> Hôtel de région" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/toTime"
            style="@style/ItemTime.Medium"
            android:layout_alignParentRight="false"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_small"
            android:text="0:00" />

        <View
            android:id="@+id/itemMetroPointTo"
            android:layout_width="40dip"
            android:layout_height="60dip"
            android:layout_toRightOf="@id/toTime"
            android:background="@drawable/ic_arret_step" />

        <TextView
            android:id="@id/toPlace"
            style="@style/ItemSecondaryText.SingleLine"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/itemMetroPointTo"
            android:paddingLeft="@dimen/padding_small"
            android:text="Trémissinière" />
    </RelativeLayout>

</LinearLayout>