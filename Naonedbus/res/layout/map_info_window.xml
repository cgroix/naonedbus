<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:showDividers="middle" >

    <RelativeLayout
        android:id="@id/zoneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@id/itemTitle"
            style="@style/ItemPrimaryText.SingleLine"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Title" />

        <TextView
            android:id="@id/itemDescription"
            style="@style/ItemSecondaryText.SingleLine.Small"
            android:layout_width="wrap_content"
            android:layout_below="@id/itemTitle"
            android:text="Description"
            android:textColor="@color/map_pane_text_color" />
    </RelativeLayout>

    <ImageView
        android:id="@id/moreAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/balloon_disclosure" />

</LinearLayout>