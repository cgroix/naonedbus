<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/horaireWidget"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/widget_margin"
    android:background="@drawable/appwidget_dark_bg_clickable" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/widget_padding" >

        <TextView
            android:id="@id/itemSymbole"
            style="@style/ItemSymbole" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="10dip" >

            <RelativeLayout
                android:id="@+id/zoneTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical" >

                <TextView
                    android:id="@id/itemTitle"
                    style="@style/ItemPrimaryText.Widget"
                    android:layout_width="wrap_content"
                    android:layout_height="25dip"
                    android:text="@string/loading" />

                <TextView
                    android:id="@id/itemDescription"
                    style="@style/ItemSecondaryText.Widget"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/itemTitle"
                    android:layout_toRightOf="@id/itemTitle"
                    android:paddingLeft="5dip" />
            </RelativeLayout>

            <!-- Fix 2.2 issues with progressbar -->

            <LinearLayout
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/zoneTitle"
                android:layout_centerVertical="true"
                android:visibility="gone" >

                <ProgressBar
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:indeterminate="true" />
            </LinearLayout>

            <TextView
                android:id="@id/itemTime"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_below="@id/zoneTitle"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>